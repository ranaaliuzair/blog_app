<h3>Post a Comment</h3>
<%= form_for [@article, @comment ] do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 5, class: "form-control", placeholder: "leave a comment" %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary btn-large' %>
  </div>
<% end %>
