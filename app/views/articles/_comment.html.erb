<% comments.each do |comment| %>
  <div>
    <h4>Comment by <%= comment.user.username %></h4>
    <p class="comment"><%= comment.body %></p>
  </div>

  <p>Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> later</p>
  <%=
    link_to(
      content_tag(:span, '', class: 'glyphicon glyphicon-thumbs-up') + " Like  #{comment.likes_count}",
      like_article_comment_path(comment.article.id, comment.id),
      class: 'btn btn-default btn-sm',
      method: :post
    )
  %>
  </p>
<% end %>
